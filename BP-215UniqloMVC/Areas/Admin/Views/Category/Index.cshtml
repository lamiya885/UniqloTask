@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Category List</h6>
        <a asp-action="Create" asp-controller="Category" class="btn btn-outline-primary ml-auto">Create  Category</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
               </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                       <td><a class="btn btn-success" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">Update</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a></td>
                        @if (item.IsDeleted == false)
                        {

                            <td><a class="btn btn-secondary" asp-action="Hide" asp-controller="Category" asp-route-id="@item.Id">Hide</a></td>
                        }
                        else
                        {
                            <td><a class="btn btn-warning" asp-action="Show" asp-controller="Category" asp-route-id="@item.Id">Show</a></td>


                        }
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>



